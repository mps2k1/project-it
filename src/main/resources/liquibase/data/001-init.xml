<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Tabela User -->
    <changeSet id="1" author="ms">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Tabela WeeklyMealPlan -->
    <changeSet id="2" author="ms">
        <createTable tableName="weekly_meal_plans">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="weekly_meal_plans"
                                 baseColumnNames="user_id"
                                 constraintName="fk_weekly_meal_plan_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela DailyMealPlan -->
    <changeSet id="3" author="ms">
        <createTable tableName="daily_meal_plans">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="weekly_meal_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="day_of_week" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="daily_meal_plans"
                                 baseColumnNames="weekly_meal_plan_id"
                                 constraintName="fk_daily_meal_plan_weekly_meal_plan"
                                 referencedTableName="weekly_meal_plans"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela MealSession -->
    <changeSet id="4" author="ms">
        <createTable tableName="meal_sessions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="daily_meal_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="meal_sessions"
                                 baseColumnNames="daily_meal_plan_id"
                                 constraintName="fk_meal_session_daily_meal_plan"
                                 referencedTableName="daily_meal_plans"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela Meal -->
    <changeSet id="5" author="ms">
        <createTable tableName="meals">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="meal_of_the_day" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="diet_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Tabela pośrednia MealSession_Meals -->
    <changeSet id="6" author="ms">
        <createTable tableName="meal_session_meals">
            <column name="meal_session_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="meal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="meal_session_meals"
                                 baseColumnNames="meal_session_id"
                                 constraintName="fk_meal_session_meals_session"
                                 referencedTableName="meal_sessions"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="meal_session_meals"
                                 baseColumnNames="meal_id"
                                 constraintName="fk_meal_session_meals_meal"
                                 referencedTableName="meals"
                                 referencedColumnNames="id"/>

        <addPrimaryKey tableName="meal_session_meals"
                       columnNames="meal_session_id, meal_id"
                       constraintName="pk_meal_session_meals"/>
    </changeSet>

    <!-- Tabela WeeklyWorkoutPlan -->
    <changeSet id="7" author="ms">
        <createTable tableName="weekly_workout_plan">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type_of_workout" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="weekly_workout_plan"
                                 baseColumnNames="user_id"
                                 constraintName="fk_weekly_workout_plan_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela DailyWorkoutPlan -->
    <changeSet id="8" author="ms">
        <createTable tableName="daily_workout_plan">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="weekly_workout_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="day_of_week" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="daily_workout_plan"
                                 baseColumnNames="weekly_workout_plan_id"
                                 constraintName="fk_daily_workout_plan_weekly_workout_plan"
                                 referencedTableName="weekly_workout_plan"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela WorkoutSession -->
    <changeSet id="9" author="ms">
        <createTable tableName="workout_session">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="daily_workout_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="workout_session"
                                 baseColumnNames="daily_workout_plan_id"
                                 constraintName="fk_workout_session_daily_workout_plan"
                                 referencedTableName="daily_workout_plan"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela Exercise -->
    <changeSet id="10" author="ms">
        <createTable tableName="exercise">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="instruction" type="VARCHAR(255)"/>
            <column name="repetitions" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="sets" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="muscle_group" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Tabela pośrednia WorkoutSession_Exercises -->
    <changeSet id="11" author="ms">
        <createTable tableName="workout_session_exercises">
            <column name="workout_session_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="exercise_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="workout_session_exercises"
                                 baseColumnNames="workout_session_id"
                                 constraintName="fk_workout_session_exercises_session"
                                 referencedTableName="workout_session"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="workout_session_exercises"
                                 baseColumnNames="exercise_id"
                                 constraintName="fk_workout_session_exercises_exercise"
                                 referencedTableName="exercise"
                                 referencedColumnNames="id"/>

        <addPrimaryKey tableName="workout_session_exercises"
                       columnNames="workout_session_id, exercise_id"
                       constraintName="pk_workout_session_exercises"/>
    </changeSet>

    <!-- Tabela Measurements -->
    <changeSet id="12" author="ms">
        <createTable tableName="measurements">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="bmi" type="DOUBLE PRECISION"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Klucz obcy dla measurements -->
        <addForeignKeyConstraint baseTableName="measurements"
                                 baseColumnNames="user_id"
                                 constraintName="fk_measurements_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="13" author="ms">
        <addColumn tableName="users">
            <column name="active_meal_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="active_workout_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="active_meal_plan_id"
                                 constraintName="fk_user_active_meal_plan"
                                 referencedTableName="weekly_meal_plans"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="active_workout_plan_id"
                                 constraintName="fk_user_active_workout_plan"
                                 referencedTableName="weekly_workout_plan"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>